{
    "name": "audetv/control-desk",
    "description": "Control Desk App",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
      "process-timeout": 0,
      "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^2.7",
        "laminas/laminas-config-aggregator": "^1.13",
        "php-di/php-di": "^7.0",
        "ramsey/uuid": "^4.7",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "symfony/cache": "^6.0",
        "symfony/console": "^6.2",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "overtrue/phplint": "^5.5",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.6"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Test\\": "tests/"
      }
    },
    "scripts": {
      "lint": "phplint",
      "cs-check": "phpcs",
      "cs-fix": "phpcbf",
      "psalm": "psalm",
      "test": "phpunit --colors=always",
      "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html var/coverage",
      "app": "php bin/app.php --ansi"
    },
    "authors": [
        {
            "name": "Aleksey Gusev"
        }
    ]
}
